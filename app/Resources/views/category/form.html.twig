{% extends 'base.html.twig' %}

{% block body %}
<div class="content">
    <div class="portlet light bg-inverse">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon icon-pencil font-red-sunglo"></i>
                <span class="caption-subject font-blue-hoki bold uppercase">{{ 'front.category.form.caption'|trans }}</span>
                <span class="caption-helper">{{ 'front.category.fom.caption.helper'|trans }} </span>
            </div>
        </div>
        <div class="portlet-body form">
            <!-- FORM CADASTRO -->
            {{ form_start(form, {'method': 'post'}) }}
            {{ form_errors(form) }}
            <div class="form-body">
                <div class="row form-group">
                    <div class="col-md-8">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.parentId)|raw }}
                    </div>
                </div>
            </div>
            <div class="form-actions right">
                <a href="{{ path('category_home') }}" title="{{ 'form.button.cancel'|trans }}" class="btn btn-default">{{ 'form.button.cancel'|trans }}</a>
                {{ form_widget(form.submit) }}
            </div>
            {{ form_end(form) }}
            <!-- END FORM CADASTRO -->
        </div>
    </div> <!-- end portlet -->
</div>
{% endblock %}


{% block  stylesheets_page %}
    {% stylesheets  
                'css/portlets.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock %}